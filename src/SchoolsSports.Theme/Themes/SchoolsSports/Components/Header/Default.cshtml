@using SchoolsSports.Theme
@using SchoolsSports.Theme.Themes.SchoolsSports.Components.Brand
@using SchoolsSports.Theme.Themes.SchoolsSports.Components.Menu
@using SchoolsSports.Theme.Themes.SchoolsSports.Components.Toolbar
@inject ISchoolsSportsBrandingProvider BrandingProvider
<div id="kt_app_header" class="app-header mb-6 mb-lg-10">
    @if (!BrandingProvider.HeaderTagLine.IsNullOrEmpty())
    {
        <div class="app-header-notice p-3">
            <div class="app-container container-xxl text-center ">
                @BrandingProvider.HeaderTagLine
            </div>
        </div>
    }

    <div class="app-header-primary" data-kt-sticky="true" data-kt-sticky-activate="{default: false, lg: true}" data-kt-sticky-name="app-header-primary-sticky" data-kt-sticky-offset="{default: false, lg: '300px'}">
        <div class="app-container container-xxl d-flex align-items-stretch justify-content-between">

            <div class="d-flex align-items-center d-lg-none ms-n2 me-2" title="Show sidebar menu">
                <div class="btn btn-icon btn-active-color-primary w-35px h-35px" id="kt_app_header_menu_toggle">
                    <i class="fa-duotone fa-grid fs-2">
                        <span class="path1"></span>
                        <span class="path2"></span>
                    </i>
                </div>
            </div>

            @(await Component.InvokeAsync<BrandViewComponent>())

            @(await Component.InvokeAsync<HeaderToolbarViewComponent>())


        </div>
    </div>

    <div class="app-header-secondary">
        <div class="app-container container-xxl d-flex align-items-stretch">
            <div class="d-flex flex-stack flex-row-fluid" id="kt_app_header_wrapper">

                @(await Component.InvokeAsync<MenuViewComponent>())

            </div>
        </div>
    </div>

</div>